@model IEnumerable<Turnos.Models.Especialidad> 
<!-- Recorro los registros de esta entidad y las muestro -->
    <p>
        <a asp-action="Create">Nuevo</a>
    </p>
    
    
    
    
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            </tr>
        </thead>    
        <tbody>
            @*Aca va el codigo para mostrar los registros de la BBDD*@
            @foreach(var item in Model){
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdEspecialidad">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.IdEspecialidad">Eliminar</a>
                    </td>

                </tr>
            }
            
            
        </tbody>
    </table>