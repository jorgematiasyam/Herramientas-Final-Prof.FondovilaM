@model Turnos.Models.Medico
 
<!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
<br>
<h4>Médico</h4>
<hr/>
<br>
<div class="row">
    <form class="col s12" asp-action="Create">
        <div class="row">
            <div asp-validation-summary="ModelOnly" ></div>
 
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate">
                    <label asp-for="Nombre"></label>
                    <span asp-validation-for="Nombre" ></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Apellido" type="text" class="validate">
                    <label asp-for="Apellido"></label>
                    <span asp-validation-for="Apellido" ></span>
                </div>
            </div>
 
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">home</i>
                    <input asp-for="Direccion" type="text" class="validate">
                    <label asp-for="Direccion"></label>
                    <span asp-validation-for="Direccion" ></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">phone</i>
                    <input asp-for="Telefono" type="tel" class="validate">
                    <label asp-for="Telefono"></label>
                    <span asp-validation-for="Telefono" ></span>
                </div>
            </div>
 
           <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">email</i>
                    <input asp-for="Email" type="text" class="validate">
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" ></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">schedule</i>
                    <input asp-for="HorarioAtencionDesde" type="text" class="timepicker">
                    <label asp-for="HorarioAtencionDesde"></label>
                    <span asp-validation-for="HorarioAtencionDesde" ></span>
                </div>
            </div>
 
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">schedule</i>
                    <input asp-for="HorarioAtencionHasta" type="text" class="timepicker">
                    <label asp-for="HorarioAtencionHasta"></label>
                    <span asp-validation-for="HorarioAtencionHasta" ></span>
                </div>
 
                <div class="input-field col s6">
                <i class="material-icons prefix">build_circle</i>
                <select name="IdEspecialidad" asp-items="ViewBag.ListaEspecialidades">
                    <option value="" disabled selected>Especialidad</option>
                </select>
            </div>
        </div>
 
        <div class="row">
            <button class="btn waves-effect waves-light teal lighten-1" type="submit" name="action">Guardar
                <i class="material-icons right">send</i>
            </button>
        </div>
        <div class="row">
            <a asp-action="Index">Volver al menú anterior</a>
        </div>
    </form>
</div>
</body>
</html>