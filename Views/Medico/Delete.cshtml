@model Turnos.Models.Medico

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>
<body>

<h3>¿Está seguro de que quiere eliminar?</h3>
<div>
    <h4>Médico</h4>
    <hr />
        <div class="row">
    <div class="col s12 m6">
      <div class="card hoverable blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">@Html.DisplayFor(model => model.Nombre), @Html.DisplayFor(model => model.Apellido)</span>
          
           <dl>
        
        <dt>
            @Html.DisplayNameFor(model => model.Direccion) : @Html.DisplayFor(model => model.Direccion)
            <hr>
        </dt>
        
        <dt>
            @Html.DisplayNameFor(model => model.Telefono) : @Html.DisplayFor(model => model.Telefono)
            <hr>
        </dt>
        
        <dt>
            @Html.DisplayNameFor(model => model.Email) : @Html.DisplayFor(model => model.Email)
            <hr>
        </dt>
        
        <dt>
            @Html.DisplayNameFor(model => model.HorarioAtencionDesde) : @Html.DisplayFor(model => model.HorarioAtencionDesde)
            <hr>
        </dt>
     
        <dt>
            @Html.DisplayNameFor(model => model.HorarioAtencionHasta) : @Html.DisplayFor(model => model.HorarioAtencionHasta)
        </dt>
        
    </dl>


        </div>
        <div class="card-action blue-grey darken-2">
          <form asp-action="Delete">
            <input type="hidden" asp-for="IdMedico" />
            <input type="submit" value="Eliminar" class="waves-effect waves-light btn-small orange lighten-2"> 
            <a asp-action="Index" class="right">Volver</a>
        </form>
        </div>
      </div>
    </div>
  </div>

















   
    
</div>
</body>
</html>
